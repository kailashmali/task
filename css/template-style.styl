color-primary=  grayscale(#fd0cc7)
color-secondary= lighten(#2c2c2c, 30)
color-lightest= #ffffff
color-darkest= #000000
color-blue= #2f92ee
color-red= #fc4242 
color-green= #3fc35f
color-yellow= #f2d438
color-orange= #ff6e41
color-purple= #c762cb

html,
body
  overflow-x hidden

body
  padding-top 70px

.navbar
  background-color color-primary
  a
    color color-lightest

.nav 
  li 
    a
     &:focus, &:hover
      background-color color-lightest
      color color-primary

.btn-default
  background-color color-primary
  border-color color-primary
  color color-lightest

.list-group-item
  &.active
    background-color color-primary
    border-color color-primary
    &:focus, &:hover
      @extends .list-group-item.active

.navbar-toggle
  background-color color-lightest
  .icon-bar
    background-color color-primary

footer
  padding 30px 0

.color-box-main
  position fixed
  left 0px
  top 30%
  .color-box-inner
    width 50px
    height 50px
    border 1px solid color-darkest
    cursor pointer
  .color-box1
    background-color color-blue
  .color-box2
    background-color color-red
  .color-box3
    background-color color-green
  .color-box4
    background-color color-yellow
  .color-box5
    background-color color-orange
  .color-box6
    background-color color-purple

.navbar.active1
  background-color color-blue

.btn-default.active1
  background-color color-blue
  border-color color-blue

nav.active1
  li 
    a
     &:focus, &:hover
      color color-blue

.list-group-item.active1
  &.active
    background-color color-blue
    border-color color-blue
    &:focus, &:hover
      @extends .list-group-item.active1.active

.navbar.active2
  background-color color-red

.btn-default.active2
  background-color color-red
  border-color color-red

nav.active2
  li 
    a
     &:focus, &:hover
      color color-red

.list-group-item.active2
  &.active
    background-color color-red
    border-color color-red
    &:focus, &:hover
      @extends .list-group-item.active1.active
  
