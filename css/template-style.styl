color-primary=  grayscale(#fd0cc7)
color-secondary= lighten(#2c2c2c, 30)
color-lightest= #ffffff
color-darkest= #000000
color-blue= #2f92ee
color-red= #fc4242 
color-green= #3fc35f
color-yellow= #f2d438
color-orange= #ff6e41
color-purple= #c762cb

html,
body
  overflow-x hidden

body
  padding-top 70px

.navbar
  background-color color-primary
  a
    color color-lightest

.nav 
  li 
    a
     &:focus, &:hover
      background-color color-lightest
      color color-primary

.btn-default
  background-color color-primary
  border-color color-primary
  color color-lightest

.list-group-item
  &.active
    background-color color-primary
    border-color color-primary
    &:focus, &:hover
      @extends .list-group-item.active

.navbar-toggle
  background-color color-lightest
  .icon-bar
    background-color color-primary

footer
  padding 30px 0

.color-box-main
  position fixed
  left 0px
  top 30%
  .color-box-inner
    width 50px
    height 50px
    border 1px solid color-darkest
    cursor pointer
  .color-box1
    background-color color-blue
  .color-box2
    background-color color-red
  .color-box3
    background-color color-green
  .color-box4
    background-color color-yellow
  .color-box5
    background-color color-orange
  .color-box6
    background-color color-purple


.back-to-top
  position fixed
  bottom 30px 
  right 30px
  display none
  i 
    padding 4px 0

.contact-overlay
  visibility hidden
  opacity 0
  background-color rgba(0,0,0,0.9)
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  color #ffffff
  z-index 9999
  transition all 0.3s ease 0s
  .contact-inner
    width 50%
    margin 100px auto
    h1
      text-align center
    .close-contact
      float right
      font-size 25px
      cursor pointer
  &.active
    opacity 1
    visibility visible

.dropdown
  position relative
  display inline-block
  &:hover
    .dropdown-menu
      display block
  button
    background-color #FF6223
    color #ffffff
    border none
    margin 0
    padding 10px 33px
  a
    background-color #cccccc
    color #333333
    padding 10px 20px !important
    &:hover
      background-color #bbbbbb
  .dropdown-menu
    position absolute
    top 100%
    left 0
    margin 0
    list-style none
    width 100%
    padding 0

#services
  text-align center
  background-color #cccccc
  padding 150px 0 0 0
  height 100%
#about
  text-align center
  background-color #ffffff
  padding 150px 0 0 0
  height 100%

.stick
	position fixed
	top 65px

.no-js
	#loader
		display none
.js
	#loader
		display block
		position absolute
		left 100px
		top 0px
.se-pre-con
	position fixed
	left 0px
	top 0px
	width 100%
	height 100%
	z-index 9999
	background url("../images/Preloader_8.gif") center no-repeat #fff