blackshade-color= #323232
blue-color= #0000ff
green-color= #008000
black-color= #000000
white-color= #ffffff
orange-color= #ffa500

transition(n)
  -webkit-transition n
  -moz-transition n
  -o-transition n
  -ms-transition n
  transition n

border-radius(n)
  -o-border-radius n
  -webkit-border-radius n
  -ms-border-radius n
  -moz-border-radius n
  border-radius n
  
.box-section
  padding 30px 0

.box-common
  border 1px solid blackshade-color
  margin 0 0 30px 0
  position relative
  overflow hidden
  &:hover
    border none
    .box-common-hover
      bottom 0px
      transition all 0.3s ease-in-out
    .image-container
    .content-container
      visibility hidden

.image-container
  img
    width 100%
    border-bottom 1px solid blackshade-color

.subject
  font-size 15px
  color blue-color
  text-transform uppercase
  float left
  font-weight bold

.price
  font-size 15px
  color green-color
  float right
  font-weight bold

.date
  font-size 15px
  color blackshade-color
  float left

.class
  font-size 15px
  color black-color
  float right

.content-container
  padding 20px
  p
    margin 15px 0px
    font-size 15px

.learn-btn
  background-color orange-color
  color white-color
  border 1px solid orange-color
  width 100%
  border-radius 0px
  text-transform uppercase
  font-size 14px
  padding 20px
  font-weight bold

.box-common-hover
  position absolute
  bottom 100%
  border 1px solid blackshade-color

.content-container-hover
  padding 45px
  p
    margin 30px 0

